<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="8dp"
        android:backgroundTint="@color/white"
        android:elevation="5dp"
        tools:context=".ui.fragments.QuizCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:background="@color/BackgroundCard"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/questionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question"
                    android:textSize="16sp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    tools:ignore="RelativeOverlap" />

                <ImageView
                    android:id="@+id/questionIdea"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/idea"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="3dp"
                    android:contentDescription="@string/question"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/question"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/lorem"
                android:textSize="12sp"
                android:lineHeight="@dimen/medium"
                android:textColor="@color/black"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:justificationMode="inter_word"
                android:ellipsize="end"
                android:singleLine="false"
                android:lines="3"/>

            <Spinner
                android:id="@+id/dropdown_answers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/BackgroundCardContainer"
                android:padding="@dimen/medium"
                android:spinnerMode="dropdown"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:layout_gravity="center_horizontal"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>
